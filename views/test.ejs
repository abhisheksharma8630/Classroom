<%  layout("/layout/boilerplate")%>

<body>
    <h1 class="cursor-pointer"><%= test?.title%></h1>
    <div class="bg-red-700">
        <% test?.questions.forEach((element)=>{ %> 
            <p>Question: <%= element.question%></p>
            <h4><%= element.correctAnswer%></h4>
            <p><%= element.options[0]%></p>
            <p><%= element.options[1]%></p>
            <p><%= element.options[2]%></p>
        <%})%>
    </div>
        <h3>Add Question</h3>
        <form action="/tests/<%=test?._id%>/question" method="post">
            <div>
