                <input class="options" type="text" name="question" required>
            </div>
            <div class="flex gap-4 mt-4">
                <div>
                    <label for="correctAnswer">Correct Answer</label>
                    <input class="options" type="text" name="correctAnswer" required placeholder="Correct Answer">
                </div>
                <div>
                    <label for="option">Other Option</label>
                    <input class="options" type="text" name="options" required>
                </div>
                <div>
                    <label for="option">Other Option</label>
